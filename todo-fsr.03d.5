### same as above, but reverse test and select for current entries,
# then make a dated backup copy of tasklist and replace the tasklist 
# with the list of newer entries.
function clean_old {
cat "$tasklist" > tmplist
d0=$(date --date=yesterday +%s)
while read line ; do
    ddt=$(echo $line | cut -d":" -f2)
    d1=$(date --date="$ddt" +%s)
        if (("$d1" > "$d0"))
        then
        echo "$line" >> current_entries
        fi
done < tmplist
    cp "$tasklist" "$tasklist".$(date  +%F)
    mv current_entries "$tasklist"
    echo "Old entries removed from task list.
A backup of the old list was made at:

    $tasklist.$(date  +%F)
          "
exit 0
}

function show_help {
    echo "$help_text" 
    exit 0
}

