function append_entry {
     echo "$tag | $ddt | $text | Entered on $(date +%Y-%m-%d)" >> "$tasklist"
     echo
     echo "$tag | $ddt | $text   |  Entered on $(date +%Y-%m-%d)"
     echo
     sleep 1
}

