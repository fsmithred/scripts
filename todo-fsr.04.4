     echo
     sleep 1
     default_entry
}

function test_date {
if [[ $duedate == n* ]]
then ddt="none"
     append_entry
else    
    beginday=$(date +%Y-%m-%d) 
    day0=$(date --date="$beginday" +%s)
    ddt=$(date --date="$duedate" +%F)
    day1=$(date --date="$ddt" +%s)
    if (("$day1" < "$day0"))
    then echo " 
      Due date is in the past!
      Are you sure you want to continue?
      (y,N): "
      read answer
      case "$answer" in
          [Yy]) append_entry ;;
             *) exit 0 ;;
      esac
    else
      append_entry
    fi
fi
}

