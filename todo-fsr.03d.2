function test_date {
    if (("$d1" < "$d0"))
    then echo " 
      Due date is in the past!
      Are you sure you want to continue?
      (y,N): "
      read answer
      case "$answer" in
          [Yy]) append_entry ;;
             *) exit 0 ;;
      esac
    else
      append_entry
    fi
}

function append_entry {
     echo "$tag : $ddt : $text : Entered on $(date +%Y-%m-%d)" >> "$tasklist"
exit 0
}

function ask_entry {
    tag=
    duedate=
    text=
    echo "Tag: "
    read tag
    echo "Date task is due.  (use *any* format): "
    read duedate
    echo "Message: "
    read text
    ddt=$(date --date="$duedate" +%F)
    echo "$tag : $ddt : $text : Entered on $(date +%Y-%m-%d)" >> "$tasklist"
exit 0
}

function recall_tags {
while read line ; do
    if [[ -n $(echo $line | cut -d":" -f1 | grep $tag) ]] ; then
        echo "$line" >> "$tmplist"
    fi
done < "$tasklist"
    cat "$tmplist" | sort -n  | $pager
    rm "$tmplist"
exit 0
}

function recall_due {
while read line ; do
    if [[ -n $(echo $line | cut -d":" -f2 | grep $ddt) ]] ; then
        echo "$line" >> "$tmplist"
    fi
done < "$tasklist"
    cat "$tmplist" | sort | $pager
    rm "$tmplist"
exit 0
}


# start with today, recall due, then increment the date by 1 day
# $days is defined down in the options loop. If no argument is provided
# for the -w option, it defaults to 8. Otherwise, it's whatever number
# of days provided on the command line. -w 3 will return today plus 3 
function recall_week {
    count=0
    ddt=$(date +%Y-%m-%d)
    until [[ "$count" = "$days" ]] ; do
        while read line ; do
          if [[ -n $(echo $line | cut -d":" -f2 | grep  $ddt) ]] ; then
          echo "$line" >> "$tmplist"
          fi
        done < "$tasklist"
      ddt=$(date --date="$ddt + 1 day" +%Y-%m-%d)
      ((count+=1))
    done
    cat "$tmplist" | sort -t: -k2 | "$pager"
    rm "$tmplist"        
exit 0
}

function recall_keyword {
    while read line
    do
      grep "$key" | sort -n
    done < "$tasklist"
exit 0
}

# add line numbers and display tasklist, ask which line to delete.
# sed takes the line number ($ln) and deletes that line from file.
# The tilde after the -i in sed makes a backup copy, tasklist~ 
function del_line {
    ln=
    nl "$tasklist" 
    echo "
    Enter line number to delete
    : "
    read ln
    echo "Entry $ln will be deleted"
    sleep 1
    sed  -i~ "$ln"'d'  "$tasklist"
    nl "$tasklist"
} 

function ask_del {
while true ; do
    echo "
    Delete another line?
    (y,N)
    "
    read answer
    case "$answer" in
      [Yy]) del_line ;;
         *) exit 0 ;;
    esac
done
}

# same as del_line but runs in a loop, so you can keep entering
# numbers without having to say yes.  This one is recursive - it 
# calls itself at the end. That might not be good. If you give it some
# other letter than q, it says, for example, "Line d will be deleted."
# md5sums before and after this are the same, so I guess it does nothing
# unless you give it a number. Same for giving it a number greater than
# the actual number of lines.
# Use -y option (not in help)
function del_lines {
while true ; do
    ln=
    nl "$tasklist"
    echo "
    Enter line number to delete,
    or q to quit
    : "
    read ln
    case "$ln" in
      [Qq]) exit 0 ;;
         *) echo "Entry $ln will be deleted"
            sleep 1
            sed -i~ "$ln"'d'  "$tasklist" 
            del_lines ;;
    esac
done
}

