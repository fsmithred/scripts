      -k) key="$2" ; recall_keyword ;;
      -l) cat "$tasklist" | sort -t: -k2 | "$pager"  ; exit 0 ;;
      -t) tag="$2" ; recall_tags ;;
      -w) if [[ "$2" ]] ; then days="$2" ; else days=8 ; fi ; recall_week ;;
      -clean) clean_old ;;
       *) echo "
    invalid option: $1
    
    $0 -h for full help.
    "
                1>&2; exit 1;;
    esac
done
